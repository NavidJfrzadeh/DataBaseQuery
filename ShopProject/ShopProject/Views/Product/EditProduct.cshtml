@using ShopProject.Entities
@model Product

@{
    var categories = ViewBag.Categories as List<Category>;
}

<h2>Edit product</h2>

<form asp-action="EditProduct" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="@Model.Title">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="@Model.Description">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Price" class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="@Model.Price">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Color" class="form-label">Color</label>
        <input type="text" class="form-control" asp-for="@Model.Color">
    </div>
    <div class="mb-3">
        <select asp-for="@Model.CategoryId" class="form-select">
            @foreach (var item in categories)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>